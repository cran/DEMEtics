citHeader("To cite the package 'DEMEtics' in publications use:")
desc <- packageDescription("DEMEtics")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
citEntry(entry="Manual",
title = "DEMEtics: Evaluating the genetic differentiation between populations based on Gst and D values",
author = personList(as.person("Alexander Jueterbock"),
as.person("Philipp Kraemer"),
as.person("Gabriele Gerlach"),
as.person("Jana Deppermann")),
year = year,
note = vers,
textVersion =
paste("Alexander Jueterbock, Philipp Kraemer, Gabriele Gerlach and Jana Deppermann (",
year,
"). DEMEtics: Evaluating the genetic differentiation between populations based on Gst and D values. ",vers,".", sep=""))
